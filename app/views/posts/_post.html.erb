<article class="post">
  <div class="inner-margin2">
    <div class="inner-padding8">
      <% if post.user_id == current_user.id %>
        <div class="btn-group post-options">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-caret-down"></i>
          </a>
          <ul class="dropdown-menu pull-right">
            <li><%= link_to "edit", get_edit_path(post) %></li>
            <li><%= link_to 'delete', get_delete_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>
      <% end %>
      <%= link_to(image_tag(post.user.profile_picture, class: "med-thumbnail"), post.user) %>
      <div class="profile-ident">
        <%= link_to(post.user.full_name, post.user, class: "profile-name") %>
        <br />
        <p>
        <span class="date">
          <%=  post.created_at.strftime("%l:%M %p %m/%d/%y") %>
        </span>
        <span class="date">
          <% neighborhood = current_user.primary_neighborhood %>
          <%= link_to neighborhood.name, neighborhood_path(neighborhood) if neighborhood %>
        </span>
        </p>
      </div>
      <p><%= post.content %><p>
    </div>
    <div class="post-actions">
      <a href="#"><i class="icon-thumbs-up"></i></a>
    </div>
  </div>
  <div id="arrow-up">
    <div id="arrow-container">
      <div class="arrow-up backdrop"></div>
      <div class="arrow-up inner-white"></div>
      <div class="arrow-up inner-color"></div>
    </div>
  </div>
  <div class="post-comments">
    <div class="inner-margin2">
      <div class="inner-padding8">
        <input placeholder="Add a comment..." type="text">
      </div>
    </div>
  </div>
</article>
