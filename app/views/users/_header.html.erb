<div class="inner bottom-border">
  <div class="container">
    <div class="row">
      <div class="span6">
        <ul class="nav nav-tabs">
          <li class= <%= 'active' if tab_active?(:users) %>>
            <%= user_nav_link(current_user, (params[:id] || params[:user_id])) %>
          </li>
          <li><a href="javascript:void(0)">About</a></li>
          <li><a href="javascript:void(0)">Photos</a></li>
          <li class= <%= 'active' if tab_active?(:friendships) %>>
            <%= link_to "Friends", user_friendships_path(@user) %>
          </li>
          <li><a href="javascript:void(0)">Favorites</a></li>
        </ul>
      </div>
      <div class="main-actions span3">
        <%= link_to "edit profile", edit_user_path(@user) if @user == current_user %>
        <%= link_to("Add Friend", friendships_path(friend_id: @user), method: :post) unless (@user == current_user or already_friends?(@user)) %>
        <a href="#"><i class="icon-search single"></i></a>
      </div>
    </div>
  </div>
</div>
