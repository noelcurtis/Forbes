<%= render 'header' %>

<div class="container">
  <div class="row">
    <div class="span12">
      <div class="row">
        <div class="span9">
          <%= form_for @neighborhood, html: { multipart: true}, validate: true do |f| %>
            <% if @neighborhood.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@neighborhood.errors.count, 'error') %> prohibited this post from being saved:</h2>
                <ul>
                  <% @neighborhood.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %> 
      
            <div>
              <%= f.text_field :name, placeholder: "Neighborhood Name", autofocus: true  %>
            </div>
            <div>
              <%= text_field_tag "zipcode", nil, disabled: true, placeholder: "Zipcode" %>
            </div>
            <br />
            <div>Choose Cover Photo: <%= file_field_tag 'image' %></div>
            <br />
            <div>
              <%= f.text_area :description, placeholder: "Describe the neighborhood.", rows: 5 %>
            </div>
            <div>
              <%= f.submit class: :btn %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
