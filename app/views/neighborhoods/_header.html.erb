<div class="inner bottom-border">
  <div class="container">
    <div class="row">
      <div class="span8">
        <ul class="nav nav-tabs">
          <li class= <%= 'active' if tab_active?(:neighborhoods) %>>
            <%= link_to @neighborhood.name, @neighborhood %>
          </li>
          <li><a href="javascript:void(0)">People</a></li>
          <li class= <%= 'active' if tab_active?(:places) %>>
            <%= link_to "Places", neighborhood_places_path(@neighborhood) %>
          </li>
          <li><a href="javascript:void(0)">Gallery</a></li>
          <li><a href="javascript:void(0)">Events</a></li>
        </ul>
      </div>
      <div class="main-actions span4">
        <% if current_user.neighborhoods.include?(@neighborhood) %>
          <% unless is_primary?(@neighborhood) %>
            <%= link_to "Leave", leave_neighborhood_path(@neighborhood), method: :post %>
            <%= link_to "Make Primary", primary_neighborhood_path(@neighborhood), method: :post %>
          <% end %>
        <% else %>
          <%= link_to "Join", join_neighborhood_path(@neighborhood) %>
        <% end %>
        <!--<%= link_to("Favorite", "/neighborhoods/#{@neighborhood.id}/add_to_favorites", method: :post) unless already_favorited?(@neighborhood) %>-->
        <%= link_to("Edit") if is_owner?(@neighborhood) %>
        <%# <a href="#"><i class="icon-search single"></i></a> %>
      </div>
    </div>
  </div>
</div>
